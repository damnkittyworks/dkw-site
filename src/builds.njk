<section class="stack-list">
  {% for project in buildProjects %}
    <article class="card build-card {% if project.status == 'ACTIVE' %}build-card-active{% endif %}">
      <header class="build-card-header">
        <h2>{{ project.name }}</h2>
        <span class="status-badge status-{{ project.status | lower }}">{{ project.status }}</span>
      </header>
      <p>{{ project.summary }}</p>
      <p class="meta-inline">Last touched {{ project.updated | prettyDate }}</p>
      {% set livingPostUrl = collections.posts | postUrlBySlug(project.links.postSlug) %}
      {% if livingPostUrl %}
        <p class="meta-inline build-links"><a href="{{ livingPostUrl }}">Read the living post â†’</a></p>
      {% endif %}
    </article>
  {% endfor %}
</section>
